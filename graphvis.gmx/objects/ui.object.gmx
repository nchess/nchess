            <string>var json = ds_map_create();
var nodes = ds_list_create();
var links = ds_list_create();
var pieces = ds_list_create();
var players = ds_list_create(); 

//Add nodes
with(node) {
    var jnode = ds_map_create();
    jnode[?"id"] = id;
    jnode[?"x"] = x;
    jnode[?"y"] = y;
    jnode[?"visible"] = selectable &amp;&amp; active;
    
    ds_list_add(nodes, jnode);
    ds_list_mark_as_map(nodes, ds_list_size(nodes)-1);
}

//Add links
with(node) {
    for(var i = 0; i &lt; ds_list_size(neighbors); i++) {
        var link = ds_list_create();
        ds_list_add(link, id, neighbors[|i]);
        ds_list_add(links, link);
        ds_list_mark_as_list(links, ds_list_size(links)-1);
    }
}

//Add pieces
var piece_id = 0;
with(node) {
    if(piece &gt;= 0 &amp;&amp; piece &lt; ds_list_size(other.piece_types)) {
        var jpiece = ds_map_create();
        jpiece[?"id"] = ++piece_id;
        jpiece[?"at"] = id; 
        jpiece[?"player"] = player;
        jpiece[?"type"] = other.piece_types[|piece]; 
        
        ds_list_add(pieces, jpiece);
        ds_list_mark_as_map(pieces, ds_list_size(pieces)-1);
    }
}

//Add players
with(node) {
    if(piece &gt;= 0) {
        if(ds_list_find_index(players, player) &lt; 0)
            ds_list_add(players, player); 
    }
}

//Assemble json 
ds_map_add_list(json, "nodes", nodes);
ds_map_add_list(json, "links", links); 
ds_map_add_list(json, "players", players);
ds_map_add_list(json, "pieces", pieces); 

//Save to file
fname = get_save_filename("JSON nchess map|*.json", "map.json");
file = file_text_open_write(fname);
file_text_write_string(file, json_encode(json));

//Cleanup
file_text_close(file);
ds_map_destroy(json); 
</string>
